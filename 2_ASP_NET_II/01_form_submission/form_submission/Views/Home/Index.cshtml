@{
    ViewData["Title"] = "Home Page";
}

<h1 class="mt-5 mb-5">Please enter your information</h1>
<form class="mx-auto col-md-11 mt-5" action="form_process" method="post">
    <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" class="form-control col-md-6" name="firstName" placeholder="your name">
    </div>
    <div>
        @{
            if(ViewBag.errors != null)
            {
                @foreach(string key in ViewBag.errors.Keys)
                {
                    if (key == "firstName" && ViewBag.errors[key].Errors.Count > 0)
                    {
                        foreach(var error in ViewBag.errors[key].Errors)
                        {
                            <p class="text-danger font-weight-bold">@error.ErrorMessage</p>
                        }
                    }
                }
            }
        }
    </div>
    <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" class="form-control col-md-6" name="lastName" placeholder="your name">
    </div>
    <div>
        @{
            if(ViewBag.errors != null)
            {
                @foreach(string key in ViewBag.errors.Keys)
                {
                    if (key == "lastName" && ViewBag.errors[key].Errors.Count > 0)
                    {
                        foreach(var error in ViewBag.errors[key].Errors)
                        {
                            <p class="text-danger font-weight-bold">@error.ErrorMessage</p>
                        }
                    }
                }
            }
        }
    </div>
    <div class="form-group">
        <label for="age">Age</label>
        <input type="number" class="form-control col-md-6" name="age">
    </div>
    <div>
        @{
            if(ViewBag.errors != null)
            {
                @foreach(string key in ViewBag.errors.Keys)
                {
                    if (key == "age" && ViewBag.errors[key].Errors.Count > 0)
                    {
                        foreach(var error in ViewBag.errors[key].Errors)
                        {
                            <p class="text-danger font-weight-bold">@error.ErrorMessage</p>
                        }
                    }
                }
            }
        }
    </div>
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control col-md-6" name="email" placeholder="name@example.com">
    </div>
    <div>
        @{
            if(ViewBag.errors != null)
            {
                @foreach(string key in ViewBag.errors.Keys)
                {
                    if (key == "email" && ViewBag.errors[key].Errors.Count > 0)
                    {
                        foreach(var error in ViewBag.errors[key].Errors)
                        {
                            <p class="text-danger font-weight-bold">@error.ErrorMessage</p>
                        }
                    }
                }
            }
        }
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group col-md-6">
            <label for="password_conf">Confirm Password</label>
            <input type="password" class="form-control" name="password_conf">
        </div>
    </div>
    <div>
        @{
            if(ViewBag.errors != null)
            {
                @foreach(string key in ViewBag.errors.Keys)
                {
                    if (key == "password" && ViewBag.errors[key].Errors.Count > 0)
                    {
                        foreach(var error in ViewBag.errors[key].Errors)
                        {
                            <p class="text-danger font-weight-bold">@error.ErrorMessage</p>
                        }
                    }
                }
            }
        }
    </div>
    <div class="row">
        <div class="form-group mt-4 col-md-6 text-left">
            <input type="submit" class="btn btn-dark pl-5 pr-5 font-weight-bold">
        </div>
        <div class="form-group mt-4 col-md-6 text-right">
            <input type="reset" class="btn btn-dark pl-5 pr-5 font-weight-bold">
        </div>
    </div>
</form>