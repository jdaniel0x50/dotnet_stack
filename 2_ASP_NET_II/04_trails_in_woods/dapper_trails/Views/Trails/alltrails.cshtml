@model dapper_trails.Models.Trail
@{
    ViewData["Title"] = "Trails | Lost in the Woods"; 
}

<div id="fullscreen_bg" class="fullscreen_bg"></div>
<div id="regContainer" class="container">
    <div class="row">
        <div class="col-md-11 mx-auto">
            <div class="panel panel-login p-5">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-9 d-inline-block align-baseline">
                            <h1 class="display-4 text-left">Lost in the Woods Trails</h1>
                        </div>
                        <div class="col-md-3 d-inline-block text-right align-baseline">
                            <p class="align-bottom d-inline-block position-relative float-none font-weight-bold">List of local hiking trails</p>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th scope="col">Trail Name</th>
                                    <th scope="col">Length</th>
                                    <th scope="col">Elevation Change</th>
                                </tr>
                            </thead>
                            @{
                                if (ViewBag.trails != null)
                                {
                                    foreach (var single_trail in ViewBag.trails)
                                    {
                                        <tr>
                                            <td scope="row"><a href="/trails/@single_trail.id" class="text-white">@single_trail.name</a></td>
                                            <td>@single_trail.length</td>
                                            <td>@single_trail.elevation_change</td>
                                        </tr>
                                    }
                                }
                            }
                        </table>
                    </div>
                    <div class="row mt-5">
                        <a href="/trails/add">Add a New Trail</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
