@{
    ViewData["Title"] = "Reviews";
}

<div id="fullscreen_bg" class="fullscreen_bg"></div>
<div class="container">
    <div class="row mt-3">
        <div class="col-md-11 mx-auto">
            <div class="panel panel-login p-3">
                <div class="panel-heading">
                    <div class="row p-3">
                        <div class="row col-md-12">
                            <h1 class="display-4 col-md-9 text-left">All Restaurant Reviews</h1>
                            <a href="/reviews/add" class="col-md-3 text-right">+ New Review</a>
                            <hr class="mt-4 mb-4">
                            @{
                                if (ViewBag.Reviews != null)
                                {
                                    foreach (var rev in ViewBag.Reviews)
                                    {
                                        <div class="card col-md-10 mx-auto text-left">
                                            <h4 class="card-title">Review for @rev.Restaurant.Name</h4>
                                            <h6 class="card-subtitle mb-2 text-muted">Review posted by: @rev.User.FirstName @rev.User.LastName on @rev.CreatedAt</h6>
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">Visited on: @rev.VisitDate</li>
                                                <li class="list-group-item">Rating: @rev.StarRating</li>
                                                <li class="list-group-item">Review: @rev.ReviewDescription</li>
                                            </ul>

                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
